<title>My Bands | Edit Band </title>
<% include ./partials/nav %>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-edit"></i> Edit Band </h1>
            <% include ./partials/messages %>
            <form action="/bands/band/<%= band.bid %>" method="POST" id="updateBand">
                <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" class="form-control" value="<%= band.name %>" />
                    </div>
                   
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="text" id="description" name="description" class="form-control"
                            value="<%= band.description %>" />
                    </div>
                
                    <div class="form-group">
                        <label for="origin">Origin</label>
                        <input type="text" id="origin" name="origin" class="form-control"
                                value="<%= band.origin %>" />
                    </div>
                    <div class="form-group">
                        <label for="rating">Rating</label>
                        <select name="rating" id="rating" class="form-control" >
                                <option value="<%= band.rating %>" selected > 
                                        <%= band.rating%>
                                 
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>  
                    </div>
                    
                </form>    
                
                    <div style="display: block ruby; margin-top: 4%">     
                        <div >
                            <form action="/bands" >
                                <button type="submit" class="btn btn-info ">Back</button>
                            </form>
                        </div> 
                        <div style="float: right; display: block ruby">
                            <form action="/bands/band/del/<%= band.bid %>" >
                                <button type="submit" class="btn btn-danger ">Delete</button>
                            </form>
                            <button type="submit" form="updateBand" class="btn btn-primary ">Save</button>
                        </div>
                
                    </div>
              
              
              
              
          </div>
        </div>
    </div>